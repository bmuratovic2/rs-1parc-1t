<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="299.0" prefWidth="618.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/korisnici.css" />
   </stylesheets>
   <columnConstraints>
      <ColumnConstraints maxWidth="200.0" minWidth="200.0" />
      <ColumnConstraints maxWidth="100.0" minWidth="100.0" />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <ListView fx:id="listKorisnici" prefHeight="100.0" prefWidth="200.0" GridPane.rowSpan="5" />
      <Label text="Ime: " GridPane.columnIndex="1" />
      <TextField fx:id="fldIme" GridPane.columnIndex="2" />
      <Label text="Prezime:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="fldPrezime" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Label text="E-mail:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="fldEmail" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Label text="Korisničko ime:" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="fldUsername" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Label text="Lozinka:" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <PasswordField fx:id="fldPassword" GridPane.columnIndex="2" GridPane.rowIndex="4" />
       <Label text="Ponovi lozinku:" GridPane.columnIndex="1" GridPane.rowIndex="5" />
       <PasswordField fx:id="fldPasswordRepeat" GridPane.columnIndex="2" GridPane.rowIndex="4" />

      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="8">
        <buttons>
           <Button fx:id="btnObrisi" mnemonicParsing="false" onAction="#obrisiAction" text="Obrisi" />
            <Button fx:id="btnKraj" cancelButton="true" mnemonicParsing="false" onAction="#krajAction" text="Kraj" />
            <Button fx:id="btnDodaj" mnemonicParsing="false" onAction="#dodajAction" prefHeight="26.0" prefWidth="100.0" text="Dodaj" />
        </buttons>
      </ButtonBar>
      <TextField GridPane.columnIndex="2" GridPane.rowIndex="5" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
